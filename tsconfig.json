{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "lib": ["es6", "dom"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "types": [
    "jasmine"
  ],
  "files": [
    "typings/tsd.d.ts",
    "src/app.ts",
    "src/pages/home/index.ts",
    "src/login/index.ts",
    "src/signup/index.ts",
    "src/index.ts",
    "src/common/headers.ts",
    "src/common/auth.guard.ts"
  ],
  "files:Glob": [
    "./src/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": true }
}

